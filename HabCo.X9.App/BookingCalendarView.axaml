<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HabCo.X9.App"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HabCo.X9.App.BookingCalendarView">
    <UserControl.Resources>
        <local:BookingStatusToBrushConverter x:Key="StatusToBrush"/>
    </UserControl.Resources>

    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Booking Calendar" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel DockPanel.Dock="Right" Width="250" Margin="10,0,0,0">
            <TextBlock Text="Bookings for:" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedDate, StringFormat='{}{0:D}'}"/>
            <ListBox ItemsSource="{Binding SelectedDayBookings}"
                     SelectedItem="{Binding SelectedBooking}"
                     Margin="0,10,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{Binding Status, Converter={StaticResource StatusToBrush}}" BorderThickness="2" CornerRadius="4" Padding="5" Margin="2">
                            <StackPanel>
                                <TextBlock Text="{Binding ClientName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Hall.Name}"/>
                                <TextBlock Text="{Binding Status, StringFormat='Status: {0}'}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0" HorizontalAlignment="Right">
                <Button Content="New" Command="{Binding NewBookingAsyncCommand}"/>
                <Button Content="Edit" Command="{Binding EditBookingAsyncCommand}"/>
                <Button Content="Delete" Command="{Binding DeleteBookingAsyncCommand}"/>
            </StackPanel>
        </StackPanel>

        <Calendar SelectionMode="Single"
                  SelectedDate="{Binding SelectedDate, Mode=TwoWay}"/>
    </DockPanel>
</UserControl>