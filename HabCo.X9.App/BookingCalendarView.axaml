<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HabCo.X9.App.BookingCalendarView">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Booking Calendar" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel DockPanel.Dock="Right" Width="250" Margin="10,0,0,0">
            <TextBlock Text="Bookings for:" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedDate, StringFormat='{}{0:D}'}"/>
            <ListBox ItemsSource="{Binding SelectedDayBookings}" Margin="0,10,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="2">
                            <StackPanel>
                                <TextBlock Text="{Binding ClientName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Hall.Name}"/>
                                <TextBlock Text="{Binding Status, StringFormat='Status: {0}'}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="New Booking" Command="{Binding NewBookingAsyncCommand}" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
        </StackPanel>

        <Calendar SelectionMode="Single"
                  SelectedDate="{Binding SelectedDate, Mode=TwoWay}"/>
    </DockPanel>
</UserControl>