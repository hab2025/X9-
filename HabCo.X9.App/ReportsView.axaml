<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HabCo.X9.App"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HabCo.X9.App.ReportsView"
             x:DataType="local:ReportsViewModel">
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Reports" FontSize="20" FontWeight="Bold"/>

        <Border Padding="15" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
            <StackPanel Spacing="10">
                <TextBlock Text="Sales Report" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Text="Select a date range to generate a sales report." TextWrapping="Wrap"/>

                <Grid ColumnDefinitions="Auto,*,Auto,*" Margin="0,10,0,0">
                    <TextBlock Grid.Column="0" Text="Start Date:" VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Text="End Date:" VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Margin="5,0"/>
                </Grid>

                <Button Content="Generate Sales Report"
                        Command="{Binding GenerateSalesReportCommand}"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" FontWeight="SemiBold" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>