<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HabCo.X9.App.UserManagementView">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="User Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add User" Command="{Binding AddUserAsyncCommand}"/>
            <Button Content="Edit User" Command="{Binding EditUserAsyncCommand}"/>
            <Button Content="Toggle Active Status" Command="{Binding ToggleActiveStatusAsyncCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role.Name}"/>
                <DataGridCheckBoxColumn Header="Is Active" Binding="{Binding IsActive}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>