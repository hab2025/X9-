<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HabCo.X9.App"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="HabCo.X9.App.InventoryItemEditorView"
             x:DataType="local:InventoryItemEditorViewModel">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="Item Name:"/>
        <TextBox Text="{Binding Name}"/>

        <TextBlock Text="Description:"/>
        <TextBox Text="{Binding Description}" TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>

        <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Quantity:"/>
                <NumericUpDown Value="{Binding Quantity}" Minimum="0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <TextBlock Text="Unit:"/>
                <TextBox Text="{Binding Unit}"/>
            </StackPanel>
        </Grid>

        <TextBlock Text="Reorder Level:"/>
        <NumericUpDown Value="{Binding ReorderLevel}" Minimum="0"/>

        <TextBlock Text="Supplier:"/>
        <ComboBox ItemsSource="{Binding Suppliers}"
                  SelectedItem="{Binding SelectedSupplier}"
                  DisplayMemberBinding="{Binding Name}"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>