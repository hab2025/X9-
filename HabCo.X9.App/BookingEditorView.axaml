<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="550"
             x:Class="HabCo.X9.App.BookingEditorView">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="Client Name:"/>
        <TextBox Text="{Binding ClientName}"/>

        <TextBlock Text="Client Phone:"/>
        <TextBox Text="{Binding ClientPhone}"/>

        <TextBlock Text="Client Email:"/>
        <TextBox Text="{Binding ClientEmail}"/>

        <TextBlock Text="Hall:"/>
        <ComboBox ItemsSource="{Binding Halls}"
                  SelectedItem="{Binding SelectedHall}"
                  DisplayMemberBinding="{Binding Name}"/>

        <TextBlock Text="Event Date:"/>
        <DatePicker SelectedDate="{Binding EventDay}"/>

        <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Start Time:"/>
                <TimePicker SelectedTime="{Binding StartTime}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <TextBlock Text="End Time:"/>
                <TimePicker SelectedTime="{Binding EndTime}"/>
            </StackPanel>
        </Grid>

        <TextBlock Text="Total Cost:"/>
        <NumericUpDown Value="{Binding TotalCost}" Minimum="0" Increment="100"/>

        <TextBlock Text="Status:"/>
        <ComboBox ItemsSource="{Binding StatusOptions}"
                  SelectedItem="{Binding Status}"/>

        <Separator Margin="0,15,0,10"/>
        <TextBlock Text="Kitchen Order Items" FontSize="16" FontWeight="Bold"/>

        <DataGrid ItemsSource="{Binding OrderItems}"
                  SelectedItem="{Binding SelectedOrderItem}"
                  Height="150"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding InventoryItem.Name}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Remove Selected Item" Command="{Binding RemoveItemCommand}" HorizontalAlignment="Right"/>

        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,0">
            <ComboBox Grid.Column="0" ItemsSource="{Binding AvailableInventoryItems}"
                      SelectedItem="{Binding SelectedItemToAdd}"
                      DisplayMemberBinding="{Binding Name}"
                      PlaceholderText="Select item to add..."/>
            <NumericUpDown Grid.Column="1" Value="{Binding QuantityToAdd}" Minimum="1" Margin="5,0"/>
            <Button Grid.Column="2" Content="Add" Command="{Binding AddItemCommand}"/>
        </Grid>


        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>