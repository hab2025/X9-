<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HabCo.X9.App"
             mc:Ignorable="d" d:DesignWidth="350"
             x:Class="HabCo.X9.App.ConfirmationDialogView"
             x:DataType="local:ConfirmationDialogViewModel">
    <StackPanel Spacing="15" Margin="20">
        <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
            <Button Content="Yes" Command="{Binding YesCommand}" IsDefault="True"/>
            <Button Content="No" Command="{Binding NoCommand}" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</UserControl>