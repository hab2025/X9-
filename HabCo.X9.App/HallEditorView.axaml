<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HabCo.X9.App"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="HabCo.X9.App.HallEditorView"
             x:DataType="local:HallEditorViewModel">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="Hall Name:"/>
        <TextBox Text="{Binding Name}"/>

        <TextBlock Text="Capacity:"/>
        <NumericUpDown Value="{Binding Capacity}" Minimum="1"/>

        <TextBlock Text="Rental Price:"/>
        <NumericUpDown Value="{Binding RentalPrice}" Minimum="0" Increment="50"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>