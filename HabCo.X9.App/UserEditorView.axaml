<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HabCo.X9.App"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="HabCo.X9.App.UserEditorView"
             x:DataType="local:UserEditorViewModel">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="Username:"/>
        <TextBox Text="{Binding Username}"/>

        <TextBlock Text="Password:"/>
        <TextBox Text="{Binding Password}"
                 Watermark="Leave empty to keep unchanged"/>

        <TextBlock Text="Role:"/>
        <ComboBox ItemsSource="{Binding Roles}"
                  SelectedItem="{Binding SelectedRole}"
                  DisplayMemberBinding="{Binding Name}"/>

        <CheckBox IsChecked="{Binding IsActive}" Content="User is Active"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>